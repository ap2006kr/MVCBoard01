@model MVCBoard.Models.RegisterViewModel
@{
    ViewBag.Title = "등록";
    Layout = "~/Views/Shared/_Layout02.cshtml";
}

<div class="card card-login mx-auto mt-5">
    <div class="card-header">Register an Account</div>
    <div class="card-body">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">

                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email address" })

            </div>
            <div class="form-group">

                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>
            <div class="form-group">

                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm password" })

            </div>


            <input type="submit" class="btn btn-primary btn-block" value="등록" />


        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        <div class="text-center">
            <a class="d-block small mt-3" href="@Url.Action("Login", "Account" , null)">Login page</a>
            <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
        </div>
    </div>
</div>